namespace ConsoleApp1zadanie
{
    class Program
    {
        static void Main(string[] args)
        {
            int image = 52;
            int numberOfRows = 3;
            int numberOfRowsFilled = image / numberOfRows;
            int numberOfExtraPictures = 52 % 3;
            Console.Write("Колличество радов картинок: ");
            Console.WriteLine(numberOfRowsFilled);
            Console.Write("Колличество лишних картинок: ");
            Console.WriteLine(numberOfExtraPictures);
            Console.ReadLine();
        
        }
    }
}
