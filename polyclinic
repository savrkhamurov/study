namespace polyclinic
{
    class Program
    {
        static void Main(string[] args)
        {
            int oldWomenInLineCount;
            int receptionTimeForOnePerson = 10;
            int clock;
            int time;
            int minutes;

            Console.Write("Введите кол-во старушек: ");
            oldWomenInLineCount = Convert.ToInt32(Console.ReadLine());
            time = oldWomenInLineCount * receptionTimeForOnePerson;
            clock = time / 60;
            minutes = time % 60;

            Console.WriteLine("Вы должны отстоять в очереди " + clock + " часа и " + minutes + " минут.");
            Console.ReadKey();
        }
    }
}
