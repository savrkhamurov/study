        {
            string userInput = "";
            int[] array = new int[0];
            int[] tempArray = new int[array.Length + 1];
            int sum = 0;
            bool exit = true;

            while (exit)
            {
                userInput = Console.ReadLine();
                if (userInput == "exit")
                {
                    exit = false;
                }
                else if (userInput == "sum")
                {
                    Console.WriteLine(sum);
                }
                else
                {
                    userInput = ?
                    for (int i = 0; i < array.Length; i++)
                    {
                        tempArray[i] = array[i];
                    }
                    tempArray[tempArray.Length - 1] = userInput;
                    array = tempArray;

                }
