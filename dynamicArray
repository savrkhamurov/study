using System;

namespace dynamicArray
{
    class Program
    {
        static void Main(string[] args)
        {
            int userInput = 0;
            int[] array = new int[0];
            int[] tempArray;
            int sum = 0;

            for (int i = 0; i < array.Length; i++)
            {
                userInput = Convert.ToInt32(Console.ReadLine());
                if (userInput > 0)
                {
                    tempArray = new int[array.Length + 1];
                    tempArray[i] = userInput;
                    sum += tempArray[i];
                    array = tempArray;
                }
                else
                {

                }
                    
            }
        }
    }
}
