using System;

namespace homeWork___ConditionalStatementsAndLoops
{
    class Program
    {
        static void Main(string[] args)
        {
            string userInput = "";
            while (userInput != "exit")
            {
                Console.Write("Введите exit для выхода из цикла: ");
                userInput = Console.ReadLine();
            }
            Console.ReadKey();
        }
    }
}
